<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#00FFC4"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/listViewDialogCate"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ListView>

    <ImageButton
        android:id="@+id/imageButtonThem"
        android:layout_width="59dp"
        android:layout_height="59dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listViewDialogCate"
        app:srcCompat="@drawable/add_dialog" />

    <TextView
        android:id="@+id/textViewThem"
        android:layout_width="334dp"
        android:layout_height="59dp"
        android:gravity="center"
        android:text="Thêm công việc"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageButtonThem"
        app:layout_constraintTop_toBottomOf="@+id/listViewDialogCate" />


</androidx.constraintlayout.widget.ConstraintLayout>